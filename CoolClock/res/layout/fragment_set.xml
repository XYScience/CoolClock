<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ecec9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <include
        android:id="@+id/head_layout"
        layout="@layout/systembar_header" />

    <com.science.coolclock.widget.RevealLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_layout" >

        <RelativeLayout
            android:id="@+id/set_clock_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/voice_record_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:rb_color="#0099CC"
                app:rb_duration="3000"
                app:rb_radius="26dp"
                app:rb_rippleAmount="4"
                app:rb_scale="1" >

                <ImageView
                    android:id="@+id/voice_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/voice_record" />
            </com.skyfishjy.library.RippleBackground>
        </RelativeLayout>
    </com.science.coolclock.widget.RevealLayout>

</RelativeLayout>