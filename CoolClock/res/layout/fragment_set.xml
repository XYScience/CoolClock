<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.science.coolclock"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ecec9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:contentInsetStart="0dp" >

        <ImageView
            android:id="@+id/back"
            style="@style/ImageView.Hamburger"
            android:contentDescription="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/set_clock"
            android:textColor="#fff"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <com.science.coolclock.widget.RevealLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" >

        <RelativeLayout
            android:id="@+id/set_clock_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/voice_record_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:rb_color="#7ecec9"
                app:rb_duration="3000"
                app:rb_radius="26dp"
                app:rb_rippleAmount="4"
                app:rb_scale="4" >

                <ImageView
                    android:id="@+id/voice_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@null"
                    android:src="@drawable/voice_record"
                    android:tint="@android:color/holo_blue_light" />
            </com.skyfishjy.library.RippleBackground>

            <TextView
                android:id="@+id/clear_clock_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voice_record_ripple"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:text="@string/clear_clock_voice"
                android:textColor="#323232"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clear_clock_voice"
                android:divider="@drawable/linearlayout_shape"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:showDividers="end|middle" >

                <LinearLayout
                    android:id="@+id/time_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="@string/seven_clock"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="24sp" />

                    <com.science.coolclock.widget.RippleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app1:rv_color="@android:color/holo_blue_light"
                        ripple:rv_type="rectangle"
                        ripple:rv_zoom="true" >

                        <ImageView
                            android:id="@+id/btn_change_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:padding="5dp"
                            android:src="@drawable/set_time"
                            android:tint="@android:color/holo_blue_light" />
                    </com.science.coolclock.widget.RippleView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/week_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_week"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:text="@string/unopen"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <com.science.coolclock.widget.RippleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app1:rv_color="@android:color/holo_blue_light"
                        ripple:rv_type="rectangle"
                        ripple:rv_zoom="true" >

                        <ImageView
                            android:id="@+id/btn_change_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:padding="5dp"
                            android:src="@drawable/set_week"
                            android:tint="@android:color/holo_blue_light" />
                    </com.science.coolclock.widget.RippleView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.science.coolclock.widget.RevealLayout>

</RelativeLayout>